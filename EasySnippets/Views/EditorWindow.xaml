<Window x:Class="EasySnippets.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySnippets"
        mc:Ignorable="d"
        Title="EditorWindow" Height="450" Width="350">
    <Grid>
        <TextBox Name="SnippetNameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name of snippet: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Value of snippet:" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="SnippetValueTextBox"  HorizontalAlignment="Left" Height="159" Margin="15,95,0,0" TextWrapping="Wrap"  AcceptsReturn="True" Text="TextBox" VerticalAlignment="Top" Width="300"/>
        <Button Name="OkButton" Content="Ok" HorizontalAlignment="Left" Margin="118,361,0,0" VerticalAlignment="Top" Width="75" Click="OkButtonClick"/>
        <Button Name="CancelButton"  Content="Cancel" HorizontalAlignment="Left" Margin="207,361,0,0" VerticalAlignment="Top" Width="75" Click="CancelButtonClick"/>
    </Grid>
</Window>
